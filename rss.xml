&lt;span class=&quot;token constant&quot;&gt;font-0&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; Source Han Code JP H:pixelsize=12;1&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;font-1&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; FontAwesome:pixelsize=12;0&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; モジュールの配置場所&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;modules-left&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; i3&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;modules-center&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; mpd&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;modules-right&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; filesystem xbacklight volume xkeyboard memory cpu battery temperature date powermen&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; セパレータ&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;separator&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; 不透明度(0.0~1.0)&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;dim-value&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; 1.0&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; ?&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;;wm-name =&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; システムトレイ&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;tray-position&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;;tray-padding = 0&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;;tray-transparent = false&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;;tray-background = ${root.background}&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; polybarを隠す的な?&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;;wm-restack = i3&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;;override-redirect = true&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; 内部メッセージの表示?&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;enable-ipc&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; true&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; カーソル&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;scroll-up&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; i3wm-wsnext&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;scroll-down&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; i3wm-wsprev&lt;/span&gt;
&lt;span class=&quot;token comment&quot;&gt;; カーソルの動作の定義?&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;cursor-click&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; pointer&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;cursor-scroll&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; ns-resize&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;h4&gt;[xbacklight]&lt;/h4&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;ini&quot;&gt;&lt;pre class=&quot;language-ini&quot;&gt;&lt;code class=&quot;language-ini&quot;&gt;&lt;span class=&quot;token selector&quot;&gt;[xbacklight]&lt;/span&gt;
&lt;span class=&quot;token selector&quot;&gt;[module/xbacklight]&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;type&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; internal/xbacklight&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;output&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; eDP1&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;format&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &amp;lt;label&gt; &amp;lt;bar&gt;&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;label&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; BL&lt;/span&gt;

&lt;span class=&quot;token constant&quot;&gt;bar-width&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; 10&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-indicator&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; |&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-indicator-foreground&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; #ff&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-indicator-font&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; 2&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-fill&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; ─&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-fill-font&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; 2&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-fill-foreground&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; #9f78e1&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-empty&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; ─&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-empty-font&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; 2&lt;/span&gt;
&lt;span class=&quot;token constant&quot;&gt;bar-empty-foreground&lt;/span&gt; &lt;span class=&quot;token attr-value&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; ${colors.foreground-alt}&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;p&gt;outputで輝度を制御するモニターを選択&lt;br&gt;
formatで書式を選択、&lt;label&gt;&lt;bar&gt;&lt;ramp&gt;&lt;br&gt;
&lt;a href=&quot;https://github.com/jaagr/polybar/wiki/Module:-xbacklight&quot;&gt;Wiki&lt;/a&gt;  &lt;/p&gt;</content:encoded></item><item><title><![CDATA[rootでvimを使う]]></title><description><![CDATA[root権限でvim使おうとすると、設定ファイルが読み込まれないんだね、知らんかった いくつか方法はあるみたいだけど、これが一番楽かな今んとこ   で環境変数を引き継いでくれるらしい(自分好みの環境をsudo…]]></description><link>https://tonooo71.github.io/2018/180506_sudo_vim/180506_sudo_vim/</link><guid isPermaLink="false">https://tonooo71.github.io/2018/180506_sudo_vim/180506_sudo_vim/</guid><pubDate>Sun, 06 May 2018 08:57:13 GMT</pubDate><content:encoded>&lt;p&gt;root権限でvim使おうとすると、設定ファイルが読み込まれないんだね、知らんかった&lt;br&gt;
いくつか方法はあるみたいだけど、これが一番楽かな今んとこ  &lt;/p&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;text&quot;&gt;&lt;pre class=&quot;language-text&quot;&gt;&lt;code class=&quot;language-text&quot;&gt;$ sudo -E nvim&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;p&gt;&lt;code class=&quot;language-text&quot;&gt;sudo -E&lt;/code&gt;で環境変数を引き継いでくれるらしい(&lt;a href=&quot;http://yudoufu.hatenablog.jp/entry/20110326/1301129885&quot;&gt;自分好みの環境をsudo時にも使えるようにする&lt;/a&gt;)&lt;br&gt;
&lt;code class=&quot;language-text&quot;&gt;sudoedit&lt;/code&gt;使えみたいなこと書いてあるページもあったけど、まあこれでいいか&lt;/p&gt;</content:encoded></item><item><title><![CDATA[dotfilesを作成する]]></title><description><![CDATA[前々からi3関係のファイルだけGithubに上げていたけど、そろそろ他の設定ファイルも足してdotfilesとして上げたくなってきた dotfilesを作るにはフォルダを作って移動させてシンボリックリンク貼って…ってのが一般的みたいだけど、めんどくさかったので$HOME…]]></description><link>https://tonooo71.github.io/2018/180506_dotfiles/180506_dotfiles/</link><guid isPermaLink="false">https://tonooo71.github.io/2018/180506_dotfiles/180506_dotfiles/</guid><pubDate>Sat, 05 May 2018 16:16:09 GMT</pubDate><content:encoded>&lt;p&gt;前々からi3関係のファイルだけGithubに上げていたけど、そろそろ他の設定ファイルも足してdotfilesとして上げたくなってきた&lt;br&gt;
dotfilesを作るにはフォルダを作って移動させてシンボリックリンク貼って…ってのが一般的みたいだけど、めんどくさかったので$HOME以下をGitリポジトリにしてdotfilesにすることにした&lt;br&gt;
(まあ$HOME全体ををGitで管理することはそうないだろうし…)  &lt;/p&gt;
&lt;p&gt;まず.gitigoreを作成する&lt;br&gt;
最初にすべてのファイルを除外して、それから追加したいファイルをホワイトリストに追加していく&lt;br&gt;
このとき階層の深いファイルはうまい具合に書かないとホワイトリストに追加されないから注意  &lt;/p&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;.gitignore&quot;&gt;&lt;pre class=&quot;language-.gitignore&quot;&gt;&lt;code class=&quot;language-.gitignore&quot;&gt;# ignore all files
/*
# add files
!/.Xdefaults
!/.bashrc
!/.xprofile
!/.config
/.config/*
!/.config/compton
!/.config/i3
!/.config/nvim
!/.config/termite
# delete files
.netrwhist
!.gitignore&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;</content:encoded></item><item><title><![CDATA[ターミナルとNeovimの色設定]]></title><description><![CDATA[ターミナルはTermiteを使っていて、カラースキームはここに揃っていると書かれてあるのでここから拝借 base16のカラースキームの確認にはここが便利   Vimのカラースキームは無限にありそうだけど、ここが比較しやすいかな vim-airline用のはここで見れるけど、Vim…]]></description><link>https://tonooo71.github.io/2018/180505_color_shell/180505_color_shell/</link><guid isPermaLink="false">https://tonooo71.github.io/2018/180505_color_shell/180505_color_shell/</guid><pubDate>Sat, 05 May 2018 13:45:18 GMT</pubDate><content:encoded>&lt;p&gt;ターミナルは&lt;a href=&quot;https://wiki.archlinux.jp/index.php/Termite&quot;&gt;Termite&lt;/a&gt;を使っていて、カラースキームは&lt;a href=&quot;https://github.com/khamer/base16-termite/tree/master/themes&quot;&gt;ここ&lt;/a&gt;に揃っていると書かれてあるのでここから拝借&lt;br&gt;
base16のカラースキームの確認には&lt;a href=&quot;http://chriskempson.com/projects/base16/&quot;&gt;ここ&lt;/a&gt;が便利  &lt;/p&gt;
&lt;p&gt;Vimのカラースキームは無限にありそうだけど、&lt;a href=&quot;http://colorswat.ch/vim/&quot;&gt;ここ&lt;/a&gt;が比較しやすいかな&lt;br&gt;
vim-airline用のは&lt;a href=&quot;https://github.com/vim-airline/vim-airline/wiki/Screenshots&quot;&gt;ここ&lt;/a&gt;で見れるけど、Vimの方の設定で事足りた&lt;/p&gt;</content:encoded></item><item><title><![CDATA[Neovim(3)]]></title><description><![CDATA[vim-airline 見た目を整理する。   vim-airlineとvim-airline-themesをインストール   Powerline仕様にする   タブ化   これタブ消せないんじゃ意味なくね…? というわけでvimのデフォルトタブ機能でいきます Git…]]></description><link>https://tonooo71.github.io/2018/180504_neovim_3/180504_neovim_3/</link><guid isPermaLink="false">https://tonooo71.github.io/2018/180504_neovim_3/180504_neovim_3/</guid><pubDate>Thu, 03 May 2018 16:44:57 GMT</pubDate><content:encoded>&lt;h3&gt;vim-airline&lt;/h3&gt;
&lt;p&gt;見た目を整理する。  &lt;/p&gt;
&lt;p&gt;vim-airlineとvim-airline-themesをインストール  &lt;/p&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;toml&quot;&gt;&lt;pre class=&quot;language-toml&quot;&gt;&lt;code class=&quot;language-toml&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token table class-name&quot;&gt;plugins&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;repo&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token string&quot;&gt;&apos;vim-airline/vim-airline&apos;&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;depends&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token string&quot;&gt;&apos;vim-airline-themes&apos;&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;

&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token table class-name&quot;&gt;plugins&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;repo&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token string&quot;&gt;&apos;vim-airline/vim-airline-themes&apos;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;p&gt;Powerline仕様にする  &lt;/p&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;vim&quot;&gt;&lt;pre class=&quot;language-vim&quot;&gt;&lt;code class=&quot;language-vim&quot;&gt;&lt;span class=&quot;token keyword&quot;&gt;let&lt;/span&gt; g&lt;span class=&quot;token punctuation&quot;&gt;:&lt;/span&gt;airline_powerline_fonts &lt;span class=&quot;token operator&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token number&quot;&gt;1&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;p&gt;タブ化  &lt;/p&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;vim&quot;&gt;&lt;pre class=&quot;language-vim&quot;&gt;&lt;code class=&quot;language-vim&quot;&gt;&lt;span class=&quot;token keyword&quot;&gt;let&lt;/span&gt; g&lt;span class=&quot;token punctuation&quot;&gt;:&lt;/span&gt;airline#extensions#&lt;span class=&quot;token builtin&quot;&gt;tabline&lt;/span&gt;#enabled &lt;span class=&quot;token operator&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token number&quot;&gt;1&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;p&gt;これタブ消せないんじゃ意味なくね…?&lt;br&gt;
というわけでvimのデフォルトタブ機能でいきます&lt;/p&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;c&quot;&gt;&lt;pre class=&quot;language-c&quot;&gt;&lt;code class=&quot;language-c&quot;&gt;&lt;span class=&quot;token operator&quot;&gt;:&lt;/span&gt;tabnew         &lt;span class=&quot;token comment&quot;&gt;// new tab&lt;/span&gt;
&lt;span class=&quot;token operator&quot;&gt;:&lt;/span&gt;tabe file      &lt;span class=&quot;token comment&quot;&gt;// new tab with file&lt;/span&gt;
gt              &lt;span class=&quot;token comment&quot;&gt;// next tab&lt;/span&gt;
gT              &lt;span class=&quot;token comment&quot;&gt;// previous tab&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;h3&gt;Gitのステータスを表示&lt;/h3&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;toml&quot;&gt;&lt;pre class=&quot;language-toml&quot;&gt;&lt;code class=&quot;language-toml&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token table class-name&quot;&gt;plugins&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;repo&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token string&quot;&gt;&apos;tpope/vim-fugitive&apos;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;p&gt;他にも色々キーマップできそうだけどこれはまた今度&lt;/p&gt;
&lt;h3&gt;C/C++用の補完&lt;/h3&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;toml&quot;&gt;&lt;pre class=&quot;language-toml&quot;&gt;&lt;code class=&quot;language-toml&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token table class-name&quot;&gt;plugins&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;repo&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token string&quot;&gt;&apos;zchee/deoplete-clang&apos;&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;on_ft&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token string&quot;&gt;&apos;c&apos;&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;,&lt;/span&gt;&lt;span class=&quot;token string&quot;&gt;&apos;cpp&apos;&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;hook_source&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token string&quot;&gt;&apos;&apos;&apos;
    let g:deoplete#sources#clang#libclang_path = &apos;/usr/lib/libclang.so&apos;
    let g:deoplete#sources#clang#clang_header = &apos;/usr/lib/clang&apos;
&apos;&apos;&apos;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;p&gt;deoplete-clangxってのもあるみたいだ  &lt;/p&gt;
&lt;h3&gt;アイコン&lt;/h3&gt;
&lt;div class=&quot;gatsby-highlight&quot; data-language=&quot;toml&quot;&gt;&lt;pre class=&quot;language-toml&quot;&gt;&lt;code class=&quot;language-toml&quot;&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;[&lt;/span&gt;&lt;span class=&quot;token table class-name&quot;&gt;plugins&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;&lt;span class=&quot;token punctuation&quot;&gt;]&lt;/span&gt;
&lt;span class=&quot;token key property&quot;&gt;repo&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token string&quot;&gt;&apos;ryanoasis/vim-devicons&apos;&lt;/span&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;
&lt;h3&gt;ファイルエクスプローラ&lt;/h3&gt;
